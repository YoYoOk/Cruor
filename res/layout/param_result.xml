<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical">
    <!-- 检测指标结果显示 -->
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="0.25">
	    <TextView 
	        android:layout_width="80dp"
	        android:layout_height="match_parent"
	        android:text="检测项目"
	        android:textSize="18sp"
	        android:textColor="#ff0000"
	        android:gravity="center"/>
	    <TextView 
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="0.25"
	        android:text="R"
	        android:textSize="18sp"
	        android:textColor="#F7B600"
	        android:gravity="center"/>
	    <TextView 
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="0.25"
	        android:text="K"
	        android:textSize="18sp"
	        android:textColor="#55FFA6"
	        android:gravity="center"/>
	    <TextView 
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="0.25"
	        android:text="Angle"
	        android:textSize="18sp"
	        android:textColor="#0055FA"
	        android:gravity="center"/>
	    <TextView 
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="0.25"
	        android:text="MA"
	        android:textSize="18sp"
	        android:textColor="#B6007F"
	        android:gravity="center"/>
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="0.25">
	    <TextView 
	        android:layout_width="80dp"
	        android:layout_height="match_parent"
	        android:text="单位"
	        android:textSize="18sp"
	        android:textColor="#ff0000"
	        android:gravity="center"/>
	    <TextView 
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="0.25"
	        android:text="min"
	        android:textSize="18sp"
	        android:textColor="#F7B600"
	        android:gravity="center"/>
	    <TextView 
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="0.25"
	        android:text="min"
	        android:textSize="18sp"
	        android:textColor="#55FFA6"
	        android:gravity="center"/>
	    <TextView 
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="0.25"
	        android:text="deg"
	        android:textSize="18sp"
	        android:textColor="#0055FA"
	        android:gravity="center"/>
	    <TextView 
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="0.25"
	        android:text="mm"
	        android:textSize="18sp"
	        android:textColor="#B6007F"
	        android:gravity="center"/>
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="0.25">
	    <TextView 
	        android:layout_width="80dp"
	        android:layout_height="match_parent"
	        android:text="检测值"
	        android:textSize="18sp"
	        android:textColor="#ff0000"
	        android:gravity="center"/>
	    <TextView 
	        android:id="@+id/tv_rValue"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="0.25"
	        android:text="*"
	        android:textSize="18sp"
	        android:textColor="#F7B600"
	        android:gravity="center"/>
	    <TextView 
	        android:id="@+id/tv_kValue"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="0.25"
	        android:text="N/A"
	        android:textSize="18sp"
	        android:textColor="#55FFA6"
	        android:gravity="center"/>
	    <TextView 
	        android:id="@+id/tv_angleValue"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="0.25"
	        android:text="*"
	        android:textSize="18sp"
	        android:textColor="#0055FA"
	        android:gravity="center"/>
	    <TextView 
	        android:id="@+id/tv_maValue"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="0.25"
	        android:text="*"
	        android:textSize="18sp"
	        android:textColor="#B6007F"
	        android:gravity="center"/>
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="0.25">
	    <TextView 
	        android:layout_width="80dp"
	        android:layout_height="match_parent"
	        android:text="参照值"
	        android:textSize="18sp"
	        android:textColor="#ff0000"
	        android:gravity="center"/>
	    <TextView 
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="0.25"
	        android:text="2-8"
	        android:textSize="18sp"
	        android:textColor="#F7B600"
	        android:gravity="center"/>
	    <TextView 
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="0.25"
	        android:text="1-3"
	        android:textSize="18sp"
	        android:textColor="#55FFA6"
	        android:gravity="center"/>
	    <TextView 
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="0.25"
	        android:text="55-78"
	        android:textSize="18sp"
	        android:textColor="#0055FA"
	        android:gravity="center"/>
	    <TextView 
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="0.25"
	        android:text="51-69"
	        android:textSize="18sp"
	        android:textColor="#B6007F"
	        android:gravity="center"/>
	</LinearLayout>
</LinearLayout>
